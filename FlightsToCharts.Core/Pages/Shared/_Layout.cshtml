<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="utf-8" />
   <meta name="viewport" content="width=device-width, initial-scale=1.0" />
   <title>@ViewData["Title"] | FlightsToCharts</title>
   <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
   <link rel="stylesheet" href="~/css/site.css" />
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==" crossorigin="anonymous" /> @* DevExtreme themes *@
   <link rel="stylesheet" href="https://cdn3.devexpress.com/jslib/20.1.8/css/dx.common.css">
   <link rel="stylesheet" href="https://cdn3.devexpress.com/jslib/20.1.8/css/dx.light.css">
</head>
<body>
   <header>
      <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-1">
         <div class="container-fluid pl-4">
            <a class="navbar-brand" asp-area="" asp-page="/Index">FlightsToCharts</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
               <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
               <ul class="navbar-nav flex-grow-1">
                  <li class="nav-item">
                     <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                  </li>
                  @*<li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                     </li>*@
                  <li class="nav-item">
                     <a class="nav-link text-dark" asp-area="" asp-page="/Airlines">Airlines</a>
                  </li>
                  <li class="nav-item">
                     <a class="nav-link text-dark" asp-area="" asp-page="/Airports">Airports</a>
                  </li>
                  <li class="nav-item">
                     <a class="nav-link text-dark" asp-area="" asp-page="/Planes">Planes</a>
                  </li>
                  <li class="nav-item">
                     <a class="nav-link text-dark" asp-area="" asp-page="/Flights">Flights</a>
                  </li>
                  <li class="nav-item">
                     <a class="nav-link text-dark" asp-area="" asp-page="/Weather">Weather</a>
                  </li>
                  <li class="nav-item">
                     <a class="nav-link text-dark" asp-area="" asp-page="/Assignment">Assignment</a>
                  </li>
                  <li class="nav-item">
                     <a class="nav-link text-dark" asp-area="" asp-page="/Contributors">Contributors</a>
                  </li>
               </ul>
            </div>
         </div>
      </nav>
   </header>
   <div id="test" class="container-fluid">
      <main role="main" class="pb-3">
         @RenderBody()
      </main>
   </div>

   <footer class="border-top footer text-muted">
      <div class="container-fluid pl-5">
         2020 - FlightsToCharts | <a asp-area="" asp-page="/Contributors">Contributors</a> |  &copy; All rights reserved
      </div>
   </footer>

   <script src="~/lib/jquery/dist/jquery.min.js"></script>
   <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

   @*we need this first to be loaded*@
   <script src="~/js/signalr/dist/browser/signalr.js"></script>
   <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
   <script type="text/javascript" src="https://cdn3.devexpress.com/jslib/20.1.8/js/dx.all.js"></script>

   <environment include="Development">
      <script src="~/js/app.js"></script>
   </environment>

   <environment exclude="Development">
      <script src="~/js/dist/@ViewData["Bundle"]"></script>
   </environment>

   @RenderSection("Scripts", required: false)
</body>
</html>
